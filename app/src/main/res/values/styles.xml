<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ll_decoration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="component_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="component_size.edittext_decoration">
      <item name="android:layout_height">wrap_content</item>
      <item name="android:background">@drawable/edittext_decoration</item>
      <item name="android:layout_marginTop">10dp</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:layout_marginRight">15dp</item>
      <item name="android:padding">10dp</item>
      <item name="android:textColorHint">@color/blue</item>
    </style>
    <style name="component_size.tv_decoration">
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">15sp</item>
       <item name="android:layout_marginTop">10dp</item>
       <item name="android:layout_marginLeft">15dp</item>
       <item name="android:textColor">@color/blue</item>
    </style>
    <style name="radiobutton_decoration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="radiobutton_decoration.checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <style name="component_size.button_decoration">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_decoration</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
